<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="im.yan.modules.dorm.dao.XsDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="im.yan.modules.dorm.entity.XsEntity" id="xsMap">
        <result property="userId" column="user_id"/>
        <result property="xh" column="xh"/>
        <result property="xm" column="xm"/>
        <result property="dormId" column="dorm_id"/>
        <result property="sex" column="sex"/>
        <result property="sfrz" column="sfrz"/>
        <result property="sfssmz" column="sfssmz"/>
    </resultMap>

    <select id="getList" resultType="im.yan.modules.dorm.entity.XsEntity">
        select * from tb_xs where sfrz = 0 order by  sfssmz asc
    </select>

    <select id="getListForGirl" resultType="im.yan.modules.dorm.entity.XsEntity">
        select * from tb_xs where sfrz = 0 and sex = 0 order by xh asc
    </select>

    <select id="getAllXs" resultType="im.yan.modules.dorm.entity.XsEntity">
        select * from tb_xs
    </select>

</mapper>